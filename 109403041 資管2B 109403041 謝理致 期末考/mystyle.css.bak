div.top {
	padding:6px;
}

div.top:hover {				
	background-color: #FFC78E;
}


img {
	width: 200px;
	height: 250px;
	float: left;
	padding: 15px;
}

a:visited {
	color: red;
}

a:hover {
	color: yellow;
}

a:active {
	color: blue;
}

::selection {
	background: green;
}

.language .bar{
	position: relative;
    width: 200%;
    display: grid;
    grid-template-columns: 150px 1fr;
    justify-content: center;
    align-items: center;
}

.language .bar .percent{
    position: relative;
    width: 25%;
    height: 10px;
    background: #f0f0f0;
}

.language .bar .percent div{
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    background: tomato;
}

#nice {
	height: 64px;
	background-image: linear-gradient(to right, rgba(30, 144, 255, 0.5), rgba(0, 0, 255, 0.9));
}
